<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date, :order => [:day, :month, :year] %>
  </div>

  <div class="field">
    <%= f.label :repeat, 'Repeat:' %>

   
    <%= f.radio_button :repeat, 0, checked: (current_page?(controller: 'events', action: 'new')) %>
    <%= label :repeat_never, 'no'%><br/>

    <%= f.radio_button :repeat, 1 %>
    <%= label :repeat_daily, 'daily'%><br/>

    <%= f.radio_button :repeat, 30 %> 
    <%= label :repeat_monthly, 'monthly'%><br/>

    <%= f.radio_button :repeat, 365 %>
    <%= label :repeat_yearly, 'yearly'%>

   
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
